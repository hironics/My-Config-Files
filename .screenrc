vbell off
startup_message off
defscrollback 100000
hardstatus alwayslastline "%h"
# hardstatus string '%{= kG}%-Lw%{=r wB}%50> %n-%f %t%{= kG}%+Lw%< * %{= kG}%-=%c:%s%{-}'
#defescape ^Oo
escape ^A^A
 
#bindkey "^[[C" next
#bindkey "^[[c" next
#bindkey "^[[D" prev
#bindkey "^[[d" prev
#bindkey "^[[B" other
#bindkey "^[[b" other
bindkey "^N" screen
bindkey "^n" screen
#bindkey "^X" title
#bindkey "^x" title
bindkey "^[x" title
